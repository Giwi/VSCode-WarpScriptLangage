{
	"name": "warpscript",
	"description": "VSCode part of a language server",
	"author": "Xavier MARIN",
	"license": "MIT",
	"version": "0.0.1",
	"publisher": "xavmarin",
	"repository": {
		"type": "git",
		"url": "https://github.com/Giwi/VSCode-WarpScriptLangage"
	},
	"engines": {
		"vscode": "^1.16.0"
	},
	"categories": [
		"Languages"
	],
	"activationEvents": [
		"onLanguage:warpscript"
	],
	"main": "./out/src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.execWS",
				"title": "Run Warpscript"
			},
			{
				"command": "editor.printReferences",
				"title": "Show All References"
			}
		],
		"languages": [
			{
				"id": "warpscript",
				"aliases": [
					"WarpScript",
					"warpscript"
				],
				"extensions": [
					"mc2"
				],
				"configuration": "./syntaxes/language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "warpscript",
				"scopeName": "source.warpscript",
				"path": "./syntaxes/warpscript.tmLanguage.json"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "editor.printReferences",
					"when": "editorHasReferenceProvider",
					"group": "navigation@1.31"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "WarpScript",
			"properties": {
				"warpscript.Warp10URL": {
					"scope": "resource",
					"type": "String",
					"default": "https://warp.cityzendata.net/api/v0:exec",
					"description": "Warp10 URL"
				},
				"warpscript.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "verbose",
					"description": "Traces the communication between VSCode and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -p ./",
		"watch": "tsc -w -p ./",
		"update-vscode": "node ./node_modules/vscode/bin/install",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"dependencies": {
		"@types/request": "^2.47.0",
		"request": "^2.83.0",
		"vscode": "^1.1.5",
		"vscode-languageclient": "^3.4.2"
	}
}
